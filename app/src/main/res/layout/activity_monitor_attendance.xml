<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monitor Attendance"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Currently Checked-In Students"
        android:textSize="16sp"
        android:textColor="#7F8C8D"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- No Data Message -->
    <TextView
        android:id="@+id/tvNoData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No students currently checked in"
        android:textSize="16sp"
        android:textColor="#95A5A6"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"/>

    <!-- Attendance List Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/layoutAttendanceList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        android:layout_marginTop="16dp"/>

    <!-- Footer -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nile University of Nigeria â€“ SEN 301 Course Project"
        android:textSize="12sp"
        android:textColor="#95A5A6"
        android:gravity="center"
        android:layout_marginTop="16dp"/>
</LinearLayout>
