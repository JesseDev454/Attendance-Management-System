<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31">
        
        <!-- Login Activity - Entry Point -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Student Dashboard -->
        <activity
            android:name=".ui.student.StudentDashboardActivity"
            android:exported="false" />
        
        <!-- Attendance History -->
        <activity
            android:name=".ui.student.AttendanceHistoryActivity"
            android:exported="false" />
        
        <!-- Staff Dashboard -->
        <activity
            android:name=".ui.staff.StaffDashboardActivity"
            android:exported="false" />
        
        <!-- Admin Dashboard -->
        <activity
            android:name=".ui.admin.AdminDashboardActivity"
            android:exported="false" />
        
        <!-- Report View -->
        <activity
            android:name=".ui.admin.ReportViewActivity"
            android:exported="false" />
        
        <!-- Main Activity (Legacy) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        
    </application>

</manifest>
